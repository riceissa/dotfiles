URxvt.font: xft:Source Code Pro:style=Medium:size=10,xft:Monaco:style=Regular:size=9,xft:Consolas:style=Regular:size=11,xft:IPAexGothic:style=Regular:size=9,xft:Unifont:style=Medium:size=10
URxvt.boldFont: xft:Source Code Pro:style=Bold:size=10
URxvt.italicFont: xft:Source Code Pro:style=Italic:size=10
URxvt.geometry: 88x37

URxvt.letterSpace: -1
! URxvt.depth: 0
Xft.hinting: true
! Xft.hintstyle: hintslight
! Xft.antialias: false
URxvt*scrollBar: false
! Compared to uxterm or MATE Terminal, urxvt seems to put more space between
! lines. I’m not sure why this happens, since lineSpace should be 0 by default
! and negative numbers don’t work. The end result is that I have to decrease
! the font size a little to get the same number of lines as in the other
! terminals.
! URxvt*lineSpace: -5
URxvt.cursorBlink: true
! For Source Code Pro
! URxvt.geometry: 88x37
URxvt.iso14755: false
URxvt.iso14755_52: false

! Allow copying to and pasting from the clipboard with Ctrl-Shift-c and
! Ctrl-Shift-v. This requires installing the clipboard extension.
URxvt.perl-ext-common: default,clipboard
URxvt.keysym.C-C: perl:clipboard:copy
URxvt.keysym.C-V: perl:clipboard:paste

! Disable some mappings that urxvt includes by default
URxvt.keysym.C-M-c: builtin-string:
URxvt.keysym.C-M-v: builtin-string:
URxvt.keysym.M-s: builtin-string:

URxvt.keysym.S-Up:    string:\033[1;2A
URxvt.keysym.S-Down:  string:\033[1;2B
URxvt.keysym.S-Right: string:\033[1;2C
URxvt.keysym.S-Left:  string:\033[1;2D

