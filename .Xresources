/* URxvt.font: xft:Consolas:style=Regular:size=10:antialiasing=true:hinting=true:autohint=false:hintstyle=hintnone:dpi=94,xft:IPAexGothic:style=Regular:size=9,xft:Unifont:style=Medium:size=10 */

URxvt.font: xft:monospace:style=Regular:size=10,xft:IPAexGothic:style=Regular:size=9,xft:Unifont:style=Medium:size=10
URxvt.boldFont: xft:monospace:bold:size=10,xft:IPAexGothic:bold:size=9
URxvt.italicFont: xft:monospace:italic:size=10,xft:IPAexGothic:italic:size=9

URxvt.geometry: 88x43

/* Xft.dpi: 94 */
URxvt.letterSpace: -1
Xft.hinting: true
URxvt*scrollBar: false
URxvt.cursorBlink: false
URxvt.iso14755: false
URxvt.iso14755_52: false
! Hide mouse pointer
URxvt.pointerBlank: true
URxvt.pointerBlankDelay: 987654321

! Allow copying to and pasting from the clipboard with Ctrl-Shift-c and
! Ctrl-Shift-v. This requires installing the clipboard extension.
URxvt.perl-ext-common: default,clipboard
URxvt.keysym.C-C: perl:clipboard:copy
URxvt.keysym.C-V: perl:clipboard:paste

! Disable some mappings that urxvt includes by default
URxvt.keysym.C-M-c: builtin-string:
URxvt.keysym.C-M-v: builtin-string:
URxvt.keysym.M-s: builtin-string:

URxvt.keysym.S-Up:    string:\033[1;2A
URxvt.keysym.S-Down:  string:\033[1;2B
URxvt.keysym.S-Right: string:\033[1;2C
URxvt.keysym.S-Left:  string:\033[1;2D

! Solarized light from
