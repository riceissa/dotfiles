browser firefox
auto-reload yes
suppress-first-reload yes

bind-key ^R reload-all

# use J and K for inter-feed navigation and j and k for smaller
# movements
unbind-key J
unbind-key K
bind-key J next-feed
bind-key K prev-feed

unbind-key j
unbind-key k
bind-key j down "all"
bind-key k up "all"

# quitting is like moving left and viewing items is like moving right
unbind-key l
bind-key l open
unbind-key h
bind-key h quit

# modified from the default given at
# http://newsbeuter.org/doc/newsbeuter.html#_configuring_colors
color background          default   default
color listnormal          default   default
color listfocus           yellow  blue   bold
color listnormal_unread   green default
color listfocus_unread    green blue   bold
color info                yellow  blue   bold
color article             default   default
